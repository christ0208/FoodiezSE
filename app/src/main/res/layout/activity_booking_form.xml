<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking_form">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/bookingform"
        android:background="@drawable/bargrey"
        android:layout_width="355dp"
        android:layout_height="480dp" />
    <Button
        android:id="@+id/pick_timedate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Pick Date and Time"
        android:fontFamily="sans-serif-medium"
        android:textSize="20dip"
        android:textStyle="bold"
        android:background="@drawable/clockdatebutton"
        android:layout_width="240dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/pick_result"
        android:layout_below="@+id/pick_timedate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Time And Date"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/peopledetail"
        android:layout_below="@+id/pick_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="How many People:"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_below="@+id/peopledetail"
        android:id="@+id/txt_people"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:fontFamily="sans-serif-condensed"
        android:hint="1-10"
        android:textAlignment="center"
        android:textSize="23dip"/>
    <Button
        android:layout_marginTop="6dp"
        android:layout_below="@+id/bookingform"
        android:id="@+id/btn_payment"
        android:background="@drawable/registerbutton"
        android:textStyle="bold"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:text="Payment"/>
</RelativeLayout>