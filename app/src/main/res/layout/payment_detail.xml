<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/msgbar"
        android:background="@drawable/bargrey"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:text="Thank You!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22dip"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@+id/msgbar"
        android:background="@drawable/bar"
        android:layout_centerHorizontal="true"
        android:layout_width="365dp"
        android:layout_height="9dp" />
    <ImageView
        android:rotation="270dp"
        android:layout_toLeftOf="@+id/payment_detail"
        android:layout_below="@+id/msgbar"
        android:background="@drawable/bar"
        android:layout_centerHorizontal="true"
        android:layout_width="8dp"
        android:layout_height="465dp" />
    <ImageView
        android:rotation="270dp"
        android:layout_toRightOf="@+id/payment_detail"
        android:layout_below="@+id/msgbar"
        android:background="@drawable/bar"
        android:layout_centerHorizontal="true"
        android:layout_width="8dp"
        android:layout_height="465dp" />
    <ImageView
        android:layout_below="@id/payment_detail"
        android:background="@drawable/bar"
        android:layout_centerHorizontal="true"
        android:layout_width="370dp"
        android:layout_height="9dp" />
    <ImageButton
        android:id="@+id/payment_detail"
        android:background="@drawable/bargrey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/msgbar"
        android:layout_width="355dp"
        android:layout_height="450dp"/>
    <TextView
        android:id="@+id/status"
        android:text="Your Booking Success!"
        android:layout_below="@+id/msgbar"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000"
        android:textSize="18dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/paymentmethoddetail"
        android:text="Payment Method"
        android:layout_below="@+id/status"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000"
        android:textSize="18dip"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/payment_method"
        android:text="Transfer Bank : 1753900759001"
        android:layout_below="@+id/paymentmethoddetail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000"
        android:textSize="18dip"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/payment_method_logo"
        android:background="@drawable/bca"
        android:layout_below="@+id/payment_method"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/pay_before"
        android:text="Complete Payment Before :"
        android:layout_below="@+id/payment_method_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000"
        android:textSize="18dip"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pay_before_detail"
        android:text=" 23 - 59 - 59"
        android:layout_below="@+id/pay_before"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000"
        android:textSize="26dip"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/payment_detail"
        android:id="@+id/btn_backtohome"
        android:background="@drawable/registerbutton"
        android:textStyle="bold"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:text="Back To Home"/>
</RelativeLayout>