<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryDetailActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/msgbar"
            android:background="@drawable/bargrey"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/bookingnumber"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:text="Booking Number :"
            android:textColor="#000"
            android:textSize="19dip"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="17dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/bookingnumber"
            android:id="@+id/lbl_bookingnumber"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:text="299-800-100-03"
            android:textSize="19dip"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/bar1"
            android:layout_below="@+id/msgbar"
            android:background="@drawable/bar"
            android:layout_width="match_parent"
            android:layout_height="6dp" />
        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bar1"
            android:background="@mipmap/kintan"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            android:id="@+id/lbl_restaurant_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Kintan Buffet [Central Park]"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="20dip"
            android:layout_below="@+id/bar1"
            android:layout_toRightOf="@id/restaurant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lbl_dateorder_booking"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:text="29 - May - 2019"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:textSize="19dip"
            android:layout_below="@+id/lbl_restaurant_name"
            android:layout_toRightOf="@id/restaurant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lbl_timeorder_booking"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="17.40 WIB"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:textSize="19dip"
            android:layout_below="@+id/lbl_dateorder_booking"
            android:layout_toRightOf="@id/restaurant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/bar2"
            android:layout_below="@+id/lbl_timeorder_booking"
            android:background="@drawable/bar"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="6dp" />
        <TextView
            android:id="@+id/jumlahorang"
            android:layout_below="@id/bar2"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Jumlah Orang :"
            android:textSize="20dip"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lbl_amount"
            android:layout_below="@id/bar2"
            android:layout_toRightOf="@id/jumlahorang"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="22dp"
            android:text="4 People"
            android:textSize="20dip"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/payment_method"
            android:layout_below="@id/jumlahorang"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="Payment Method :"
            android:textSize="20dip"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lbl_payment"
            android:layout_below="@id/lbl_amount"
            android:layout_toRightOf="@id/jumlahorang"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:text="Transfer Bank"
            android:textSize="20dip"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/bar2"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="130dp"
            android:text="Total :"
            android:textSize="25dip"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/fulltotal"
            android:layout_below="@id/total"
            android:background="@drawable/bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="330dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/lbl_total"
            android:layout_below="@id/total"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="35dip"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="25dp"
            android:text="Rp.120.000,00"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/bar3"
            android:layout_below="@+id/fulltotal"
            android:background="@drawable/bar"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="6dp" />
        <TextView
            android:id="@+id/ratingdetail"
            android:text="Rating"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="30dip"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:layout_below="@id/bar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_below="@+id/ratingdetail"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</ScrollView>